<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="text"
        android:textColor="#F80C0C" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Drinks" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chbCoffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDecreaseCoffee"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:text="-" />

                <TextView
                    android:id="@+id/txtCounterCoffee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:inputType="number"
                    android:text="0"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btnIncreaseCoffee"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chbTee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tee" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDecreaseTee"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:text="-" />

                <TextView
                    android:id="@+id/txtCounterTee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:inputType="number"
                    android:text="0"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btnIncreaseTee"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chbWater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDecreaseWater"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:text="-" />

                <TextView
                    android:id="@+id/txtCounterWater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:inputType="number"
                    android:text="0"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btnIncreaseWater"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    

    <Button
        android:id="@+id/btnOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order"
        android:textSize="20sp" />

</LinearLayout>